@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model SillyStyles.DisplayCategoryViewModel

@{
    Layout = "_Layout";
}

<h2>Products in @Model.CurrentPage category</h2>
<ul>
@foreach (var p in Model.Products)
{
    <li>
        <a asp-route="product" asp-route-slug="@p.Slug">@p.Title</a>
    </li>
}
</ul>